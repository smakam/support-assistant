# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=KGen AI Support
BACKEND_CORS_ORIGINS=["http://localhost:8501","http://localhost:3000","https://yourproductionapp.com"]

# Security
SECRET_KEY=your_secret_key_for_jwt_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Database
# Use SQLite for local development
# DATABASE_URL=sqlite:///kgen_gaming_support_advanced.db
# Use PostgreSQL for production
DATABASE_URL=postgresql://kgen_support_user:your_password_here@your-postgres-host.render.com/kgen_support
# Set to true to use SQLite instead of PostgreSQL for local development
USE_SQLITE=false

# JIRA
JIRA_SERVER=https://your-instance.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=KGEN

# Vector Store
KNOWLEDGE_BASE_PATH=advanced_knowledge_base.txt
VECTOR_STORE_PATH=vector_store

# Environment: development or production
ENVIRONMENT=development

# Debug mode (set to False in production)
DEBUG=True 